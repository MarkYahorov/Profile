<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="information_text" parent="text">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">45dp</item>
    </style>

    <style name="information_text_text" parent="information_text">
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="information_text_following" parent="information_text">
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fontFamily">@font/lol</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="toolbar_profile_text" parent="@style/text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="text_profile_info" parent="@style/text">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">25dp</item>
    </style>

    <style name="name_text" parent="text_profile_info">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="profession_text" parent="text_profile_info">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="site_text" parent="text_profile_info">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="likes_count" parent="text">
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginStart">30dp</item>
    </style>

    <style name="comments_count" parent="text">
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginStart">70dp</item>
    </style>

    <style name="comment_text" parent="text">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="comment_person" parent="text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_following">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">?attr/buttonColor</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="btn_share">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">?attr/buttonColor</item>
    </style>

    <style name="enter_comment">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:hint">@string/enter_you_comment</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="image_more">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="image_profile">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="main_photo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">450dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="like_and_comments">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="marker" parent="like_and_comments">
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="me">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:src">@drawable/me</item>
    </style>

    <style name="edit_container">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/radius</item>
    </style>
</resources>